<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="seekbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text" parent="wrap">
        <item name="android:padding">5dp</item>
    </style>

    <style name="text.menu">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.item">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text.item.title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text.price">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.energylabel">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text.display">
        <item name="android:textColor">#00FF00</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="picture">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="button" parent="wrap">
        <item name="android:padding">5dp</item>
    </style>

    <style name="button.home">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout.vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="layout.horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="layout.match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout.match.vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="layout.menu.left" parent="layout.match.vertical">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/gdf_gray</item>
    </style>

    <style name="layout.menu.row" parent="layout.horizontal">
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>