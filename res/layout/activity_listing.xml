<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/text_listing"
        style="@style/text" />

    <LinearLayout style="@style/layout.horizontal" >

        <TextView
            style="@style/text.display"
            android:text="@string/consumption_estimation" />

        <TextView
            android:id="@+id/text_estimation"
            style="@style/text.display" />

        <TextView
            style="@style/text.display"
            android:text="@string/consumption_unity" />
    </LinearLayout>

    <LinearLayout style="@style/layout.horizontal" >

        <TextView
            style="@style/text.display"
            android:text="@string/consumption_realtime" />

        <TextView
            android:id="@+id/text_real"
            style="@style/text.display" />

        <TextView
            style="@style/text.display"
            android:text="@string/consumption_unity" />
    </LinearLayout>

</LinearLayout>